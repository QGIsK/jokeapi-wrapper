{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
        ],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
    },
    "include": [
        "src/**/*",
        "src/*"
    ]
}